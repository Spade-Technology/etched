{
  "name": "renderer",
  "version": "0.1.0",
  "private": true,
  "main": "main/main.js",
  "scripts": {
    "dev:web": "next dev renderer",
    "dev:desktop": "pnpm clean && pnpm build:main && concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev renderer\" \"electron .\"",
    "start:desktop": "pnpm build:desktop && electron .",
    "build:desktop": "pnpm clean && pnpm build:electron",
    "build:web": "next build",
    "build:main": "tsc -p main",
    "build:renderer": "next build renderer",
    "build:electron": "pnpm build:renderer && pnpm build:main",
    "lint": "next lint renderer",
    "clean": "rimraf dist renderer/.next main/*.js main/**/*.js"
  },
  "dependencies": {
    "electron-serve": "^1.3.0",
    "electron-store": "^8.1.0",
    "next": "14.1.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "postcss": "^8",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
