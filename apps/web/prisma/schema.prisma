generator client {
    provider        = "prisma-client-js"
    previewFeatures = []
}

enum ApprovedStatus {
    Pending
    Approved
}

enum SubscriptionStatus {
    Pending
    Accepted
    Cancelled
}

datasource db {
    provider          = "postgresql"
    url               = env("DATABASE_PRISMA_URL") // uses connection pooling
    directUrl         = env("DATABASE_URL_NON_POOLING") // uses a direct connection
    shadowDatabaseUrl = env("DATABASE_URL_NON_POOLING") // used for migrations
}

model User {
    address String  @id @unique
    email   String?

    isApproved ApprovedStatus @default(Pending)

    userActivationCodes userActivationCode[]
    isAdministrator     Boolean              @default(false)

    capacityCredits capacityCredit[]
    subscriberId    String //For payments (stripe, etc).  Not related to newsletters
}

model PaidSubscriptions {
    subscriberId   String
    subscriptionId String
    quantity       Int
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    @@id([subscriberId, subscriptionId])
}

model GiftedSubscriptions {
    //Intentionally basing on combo-id rather than a single unique id -- in the event that a sub is somehow deleted then restored
    donorSubId     String //donor's subscriberId
    recipientSubId String //recipients' subscriberId
    subscriptionId String
    status         SubscriptionStatus @default(Pending)

    //Only allowed to have a single sub from any individual donor.  Otherwise we'll need to add subscriptionId field
    //Probably should limit to just recipient so that we don't risk multiple assignments from other individuals
    @@id([donorSubId, recipientSubId])
}

model Subscriber {
    email String @id @unique

    company    String?
    subscribed Boolean @default(true)

    subscribedAt DateTime @default(now())
}

model userActivationCode {
    id String @id @default(uuid())

    code       String
    expiration DateTime

    activatedBy User? @relation(fields: [userAddress], references: [address])

    userAddress String?
}

model capacityCredit {
    id String @id @default(uuid())

    capacityTokenId           String
    creditAmountPerKilosecond Int
    expiration                DateTime

    createdAt DateTime @default(now())

    receiver    User?   @relation(fields: [userAddress], references: [address])
    userAddress String?
}
